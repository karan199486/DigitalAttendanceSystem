<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karan.digitalattendancesystem.StudentDashboardActivity"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dash_txt_currentlecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lecture : AJP"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/dash_txt_currentteacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher : DR. PREETI"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

       <!-- <LinearLayout
            android:visibility="gone"
            android:id="@+id/dash_llayout_showprogress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="processing your request..."
                android:layout_gravity="center"/>
        </LinearLayout>-->

        <Button
            android:id="@+id/dash_btn_requestattendance"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_grey_design"
            android:text="Request Attendance"
            android:textColor="@color/grey"
            android:enabled="false"
            />

        <Button
            android:id="@+id/dash_btn_attendancerecord"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary_dark_design"
            android:text="View Attendance Record"
            android:textColor="@android:color/white"

            />

        <Button
            android:id="@+id/dash_btn_refresh"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary_dark_design"
            android:text="refresh"
            android:textColor="@android:color/white"

            />

        <TextView
            android:id="@+id/stud_dash_txt_reqstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request status : Pending"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />


    </LinearLayout>

</ScrollView>
