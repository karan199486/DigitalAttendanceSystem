<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.karan.digitalattendancesystem.StudentRegistrationActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Registration Form"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:textSize="15sp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_edit_txt_name"
            android:hint="Full name"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:weightSum="3">
        <EditText
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_edit_txt_rollno"
            android:hint="Roll no"
            android:singleLine="true"/>

            <Spinner
                android:layout_weight="1"
                android:id="@+id/reg_spin_course"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </Spinner>

        </LinearLayout>
        <EditText
            android:layout_width="250dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_edit_txt_email"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            />
        <EditText
            android:layout_width="250dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_edit_txt_phoneno"
            android:hint="Mobile no."
            android:inputType="phone"
            android:singleLine="true"/>
        <EditText
            android:layout_width="250dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_edit_txt_password"
            android:inputType="textPassword"
            android:hint="Password"
            android:singleLine="true"/>
        <EditText
            android:layout_width="250dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_edit_txt_confirmpassword"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:singleLine="true"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="register"
            android:background="@drawable/btn_primary_dark_design"
            android:textColor="@android:color/white"
            />
        <TextView
            android:id="@+id/reg_txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already registered ?"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
